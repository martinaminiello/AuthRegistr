<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF076AEC</item> <!-- Color of the selected date -->
        <item name="android:textColorPrimary">#FF076AEC</item> <!-- Color of the text and buttons -->
        <item name="android:colorControlActivated">#FF076AEC</item> <!-- Color of the activated control (OK button) -->
